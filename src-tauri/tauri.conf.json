{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "3D Archive Viewer",
  "version": "1.0.0",
  "identifier": "com.splat-mesh-viewer.app",
  "build": {
    "beforeDevCommand": "npx vite --port 8080",
    "devUrl": "http://localhost:8080/?kiosk=true&theme=editorial",
    "beforeBuildCommand": "npx vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "3D Archive Viewer",
        "url": "index.html?kiosk=true&theme=editorial",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset: https://asset.localhost",
        "script-src": "'self' 'unsafe-eval' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' blob: data: asset: https://asset.localhost",
        "connect-src": "'self' blob: data: ipc: http://ipc.localhost asset: https://asset.localhost",
        "worker-src": "'self' blob:",
        "font-src": "'self'",
        "media-src": "'self' blob:",
        "object-src": "'none'"
      },
      "dangerousDisableAssetCspModification": ["script-src"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
